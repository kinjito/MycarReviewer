<body>
        <div>
           <nav>left</nav>
            <main>
              <h1>新規投稿</h1>
                <!-- form_with部分 -->
                <%= form_with model:@post, local:true do |f| %>

                  <h4>車の写真</h4>
                  <%= f.attachment_field :car_image %>

                  <h4>写真の内容について</h4>
                  <%= f.text_area :detail %>

                  <h4>車の名前</h4>
                  <%= f.text_field :car_name %>

                  <h4>写真の住所</h4>
                  <%= f.text_field :photo_address %>

                  <h4>カスタマイズポイント</h4>
                  <%= f.text_area :comment %>

                  <%= f.submit '投稿' %>

                <% end %>

            </main>
            <aside>right</aside>
        </div>
</body>
